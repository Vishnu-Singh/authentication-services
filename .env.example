# Django Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite default, configure for PostgreSQL/MySQL in production)
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=auth_service
# DATABASE_USER=postgres
# DATABASE_PASSWORD=password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=True
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# OAuth 2.0 Provider Configuration
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/oauth/callback/google

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/oauth/callback/github

# SAML Configuration
SAML_ENTITY_ID=http://localhost:8000/saml/metadata
SAML_ACS_URL=http://localhost:8000/api/auth/saml/acs/
SAML_SLO_URL=http://localhost:8000/api/auth/saml/slo/

# LDAP Configuration (for Active Directory/LDAP authentication)
LDAP_SERVER_URI=ldap://ldap.example.com
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=
LDAP_USER_SEARCH_BASE=ou=users,dc=example,dc=com

# Email Configuration (for OTP and magic links)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# SMS Configuration (for OTP)
# Twilio Example
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Redis (optional, for session storage and caching)
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=1

# WebAuthn Configuration
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Auth Service
WEBAUTHN_ORIGIN=http://localhost:8000

# MFA Configuration
MFA_ENABLED=True
MFA_ISSUER_NAME=Auth Service

# Logging
LOG_LEVEL=INFO
