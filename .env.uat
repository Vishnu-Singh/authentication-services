# UAT (User Acceptance Testing) Environment Configuration
# Django Configuration
DEBUG=False
SECRET_KEY=your-secret-key-here-generate-a-secure-random-key
ALLOWED_HOSTS=uat.example.com,uat-api.example.com
ENVIRONMENT=uat

# Database (PostgreSQL recommended for UAT)
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=auth_service_uat
DATABASE_USER=auth_uat_user
DATABASE_PASSWORD=your_secure_uat_password
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_CONN_MAX_AGE=300

# CORS Settings - Restricted origins
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://uat.example.com,https://uat-app.example.com

# CSRF Configuration
CSRF_TRUSTED_ORIGINS=https://uat.example.com,https://uat-api.example.com

# Security Settings
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=3600

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply-uat@example.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=noreply-uat@example.com

# Redis (Optional, for caching and session storage)
REDIS_URL=redis://localhost:6379/1

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=1

# WebAuthn Configuration
WEBAUTHN_RP_ID=uat.example.com
WEBAUTHN_RP_NAME=Auth Service (UAT)
WEBAUTHN_ORIGIN=https://uat.example.com

# MFA Configuration
MFA_ENABLED=True
MFA_ISSUER_NAME=Auth Service UAT

# Logging
LOG_LEVEL=INFO

# OAuth 2.0 Provider Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://uat.example.com/api/auth/oauth/callback/google

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=https://uat.example.com/api/auth/oauth/callback/github

# SAML Configuration
SAML_ENTITY_ID=https://uat.example.com/saml/metadata
SAML_ACS_URL=https://uat.example.com/api/auth/saml/acs/
SAML_SLO_URL=https://uat.example.com/api/auth/saml/slo/

# LDAP Configuration (Optional)
LDAP_SERVER_URI=ldap://ldap-uat.example.com
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=your_ldap_password
LDAP_USER_SEARCH_BASE=ou=users,dc=example,dc=com
