# Development Environment Configuration
# Django Configuration
DEBUG=True
SECRET_KEY=django-insecure-dev-key-change-for-other-envs
ALLOWED_HOSTS=localhost,127.0.0.1
ENVIRONMENT=development

# Database (SQLite default for development)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db_dev.sqlite3

# CORS Settings - Allow all in development
CORS_ALLOW_ALL_ORIGINS=True

# Email Configuration - Console backend for development
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=120
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# WebAuthn Configuration
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Auth Service (Dev)
WEBAUTHN_ORIGIN=http://localhost:8000

# MFA Configuration
MFA_ENABLED=True
MFA_ISSUER_NAME=Auth Service Dev

# Logging
LOG_LEVEL=DEBUG

# OAuth 2.0 Provider Configuration (Optional)
