# Production Environment Configuration
# SECURITY WARNING: Keep this file secure and never commit sensitive values to version control

# Django Configuration
DEBUG=False
SECRET_KEY=CHANGE_THIS_TO_A_LONG_RANDOM_SECRET_KEY_MINIMUM_50_CHARS
ALLOWED_HOSTS=example.com,api.example.com,www.example.com
ENVIRONMENT=production

# Database (PostgreSQL or MySQL required for production)
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=auth_service_prod
DATABASE_USER=auth_prod_user
DATABASE_PASSWORD=CHANGE_THIS_TO_A_SECURE_DATABASE_PASSWORD
DATABASE_HOST=db.example.com
DATABASE_PORT=5432
DATABASE_CONN_MAX_AGE=600

# CORS Settings - Strict origin control
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://example.com,https://app.example.com,https://www.example.com

# CSRF Configuration
CSRF_TRUSTED_ORIGINS=https://example.com,https://api.example.com,https://www.example.com

# Security Settings - Maximum security for production
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@example.com
EMAIL_HOST_PASSWORD=CHANGE_THIS_TO_EMAIL_PASSWORD
DEFAULT_FROM_EMAIL=noreply@example.com
ADMIN_EMAIL=admin@example.com

# Redis (Recommended for production caching and sessions)
REDIS_URL=redis://redis.example.com:6379/1

# JWT Configuration - Shorter lifetime for production
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=15
JWT_REFRESH_TOKEN_LIFETIME_HOURS=12

# WebAuthn Configuration
WEBAUTHN_RP_ID=example.com
WEBAUTHN_RP_NAME=Auth Service
WEBAUTHN_ORIGIN=https://example.com

# MFA Configuration
MFA_ENABLED=True
MFA_ISSUER_NAME=Auth Service

# Logging
LOG_LEVEL=WARNING

# OAuth 2.0 Provider Configuration
# Google OAuth
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_REDIRECT_URI=https://example.com/api/auth/oauth/callback/google

# GitHub OAuth
GITHUB_CLIENT_ID=your-production-github-client-id
GITHUB_CLIENT_SECRET=your-production-github-client-secret
GITHUB_REDIRECT_URI=https://example.com/api/auth/oauth/callback/github

# SAML Configuration
SAML_ENTITY_ID=https://example.com/saml/metadata
SAML_ACS_URL=https://example.com/api/auth/saml/acs/
SAML_SLO_URL=https://example.com/api/auth/saml/slo/

# LDAP Configuration (Optional)
LDAP_SERVER_URI=ldap://ldap.example.com
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=CHANGE_THIS_TO_LDAP_PASSWORD
LDAP_USER_SEARCH_BASE=ou=users,dc=example,dc=com

# SMS Configuration - Twilio example (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
